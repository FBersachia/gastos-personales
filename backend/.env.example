# =====================================================
# Finance Manager Backend - Environment Configuration
# =====================================================
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env file to version control

# =====================================================
# Server Configuration
# =====================================================

# Application environment (development, production, test)
NODE_ENV=development

# Server port (optional for Vercel, required for local development)
# Default: 3000
PORT=3000

# =====================================================
# Database Configuration
# =====================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
#
# Local Development Example:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/finance_manager
#
# Vercel Postgres Example:
# DATABASE_URL=postgres://user:pass@db.vercel-storage.com:5432/verceldb?sslmode=require
#
# Supabase Example:
# DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres
DATABASE_URL=postgresql://finance_user:finance_pass@localhost:5432/financedb

# =====================================================
# JWT Authentication
# =====================================================

# Secret key for JWT token signing (minimum 32 characters recommended)
# Generate with: openssl rand -base64 32
# CRITICAL: Use a different, secure secret in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# JWT token expiration time
# Examples: 7d (7 days), 24h (24 hours), 60m (60 minutes)
JWT_EXPIRES_IN=7d

# =====================================================
# CORS Configuration
# =====================================================

# Allowed origin for CORS requests
# Local development: http://localhost:5173
# Production: https://finance.fbersachia.com.ar
# Multiple origins (comma-separated): https://finance.fbersachia.com.ar,http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# =====================================================
# Logging
# =====================================================

# Log level (error, warn, info, http, verbose, debug, silly)
# Recommended: info for production, debug for development
LOG_LEVEL=info

# =====================================================
# Optional Configuration (uncomment to enable)
# =====================================================

# API Rate Limiting (requests per minute per IP)
# RATE_LIMIT=100

# Session timeout (minutes)
# SESSION_TIMEOUT=60

# Maximum file upload size (MB)
# MAX_UPLOAD_SIZE=10
